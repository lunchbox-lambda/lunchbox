{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
